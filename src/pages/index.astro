---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';
import { SITE } from '../types/components';

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<BaseLayout title={SITE.title} description={SITE.description}>
  <section class="intro">
    <h1 class="intro-heading">Burning away the noise to think clearly</h1>
    <p class="intro-text">
      Anonymous writing on software, ideas, and whatever won't leave my head.
      No algorithm, no metrics. Just words.
    </p>
  </section>

  {recentPosts.length > 0 && (
    <section class="recent">
      <h2 class="section-heading">Recent</h2>
      <ul class="post-list">
        {recentPosts.map((post) => (
          <PostCard
            title={post.data.title}
            href={`/blog/${post.id}`}
            date={post.data.pubDate}
          />
        ))}
      </ul>
      {allPosts.length > 5 && (
        <a href="/blog" class="archive-link">all posts &rarr;</a>
      )}
    </section>
  )}
</BaseLayout>

<style>
  .intro {
    margin-bottom: var(--space-3xl);
  }

  .intro-heading {
    font-family: var(--font-serif);
    font-size: var(--font-size-2xl);
    font-weight: 600;
    line-height: var(--line-height-heading);
    letter-spacing: var(--letter-spacing-tight);
    margin-bottom: var(--space-md);
  }

  .intro-text {
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    max-width: 50ch;
    line-height: var(--line-height-body);
  }

  .recent {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .section-heading {
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    font-weight: 400;
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
    text-transform: lowercase;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .archive-link {
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
    color: var(--color-accent);
    text-decoration: none;
    margin-top: var(--space-md);
  }

  .archive-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .intro-heading {
      font-size: var(--font-size-xl);
    }

    .intro {
      margin-bottom: var(--space-2xl);
    }
  }
</style>
